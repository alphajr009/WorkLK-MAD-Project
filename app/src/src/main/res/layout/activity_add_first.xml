<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFirstActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="111dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="Join  the Hunt"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textViewdd3"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Company Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="332dp"
            android:layout_height="53dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="John keels"
            android:inputType="text"
            android:paddingLeft="9dp" />

        <TextView
            android:id="@+id/textViewdd2"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Country"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <Spinner
            android:id="@+id/country_spinner"
            android:layout_width="332dp"
            android:layout_height="53dp"
            android:background="@drawable/edittext_background"
            android:paddingLeft="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.321" />

        <TextView
            android:id="@+id/textViewdd"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Province"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/province"
            android:layout_width="332dp"
            android:layout_height="53dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Select Province"
            android:inputType="text"
            android:paddingLeft="9dp" />

        <TextView
            android:id="@+id/textViewdd4"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="District"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/district"
            android:layout_width="332dp"
            android:layout_height="53dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Galle"
            android:inputType="text"
            android:paddingStart="9dp"
            android:paddingLeft="9dp" />


        <TextView
            android:id="@+id/textViewdd5"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="332dp"
            android:layout_height="53dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Kahawa,Railway Street"
            android:inputType="text"
            android:paddingLeft="9dp" />

        <TextView
            android:id="@+id/textViewdd6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/roboto_black"
            android:onClick="goSecondStep"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:backgroundTint="#1967D3" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>